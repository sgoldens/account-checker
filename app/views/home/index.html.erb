<% if current_user %>
  <div class="panel panel-default">
    <div class="panel-body">
      <p><%= link_to "Search Reddit.com for available usernames", new_search_url %></p>
      <p><%= link_to "Automation: Sign-up a new tester account for this site", tasks_url %></p>
    </div>
  </div>
    
  <div class="panel panel-default">
    <div class="panel-body">
      <h3>Recent Tasks</h3>
      <%= render 'newest_account' %>
    </div>
  </div>
<% else %>
  <%= render 'welcome' %>
<% end %>