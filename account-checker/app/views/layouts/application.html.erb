<!DOCTYPE html>
<html>
  <head>
    <title>Account Checker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'Account Checker', root_path, class: 'navbar-brand' %>
        </div>
        <div id="navbar">
          <% if current_user %>
            <ul class="nav pull-right nav-tabs" style="display: flex">
              <li class="nav"><%= link_to 'Home', home_path %></li>
              <li class="nav"><%= link_to 'Sign Out', destroy_user_session_path %></li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav">
              <li><%= link_to 'Sign In', new_user_session_path %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>

      <div class="container">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>">
            <%= value %>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </body>
  </html>
